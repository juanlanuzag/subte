{

  "manifest_version": 2,
  "name": "Subte",
  "version": "0.1",

  "description": "Estado del subte",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "Subte",
    "default_popup": "popup/subte.html"
  },

  "permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup/subte.js"],
      "css": ["popup/subte.css"],
      "html": ["popup/subte.html"]
    }
  ]

}


